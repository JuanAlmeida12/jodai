<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#39a49d"
    tools:context="com.example.admin.myapplication.fragments.MissionsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha a Missão"
        android:layout_marginBottom="10dp"/>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#94695d5d" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="#fff"
            android:padding="6dp"
            android:orientation="vertical"
            android:paddingTop="45dp">

            <TextView
                android:id="@+id/mission_name"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dump_text" />

            <TextView
                android:id="@+id/mission_desp"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/dump_text" />
            <LinearLayout
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:id="@+id/bt_start_mission"
                    android:layout_height="wrap_content"
                    android:text="Começar"
                    style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
